<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <Dialog id="newExpertDialog"
        title="{i18n>createExpert}">
        <HBox>
            <items>
                <Panel>
                    <f:SimpleForm editable="true"
                        layout="ResponsiveGridLayout"
                        id="expertForm"
                        binding="{expertCreate>/Expert}">
                        <f:content>
                            <Label text="{i18n>mail}"
                                labelFor="ExpertMail" />
                            <Input id="ExpertMail"
                                value="{expertCreate>Mail}"
                                type="Text"
                                required="true"
                                visible="true">
                            </Input>
                            <Label text="{i18n>Mo}"
                                labelFor="Mo" />
                            <CheckBox id="Mo"
                                selected="{expertCreate>Mo}">
                            </CheckBox>
                            <Label text="{i18n>Tu}"
                                labelFor="Tu" />
                            <CheckBox id="Tu"
                                selected="{expertCreate>Tu}">
                            </CheckBox>
                            <Label text="{i18n>We}"
                                labelFor="We" />
                            <CheckBox id="We"
                                selected="{expertCreate>We}">
                            </CheckBox>
                            <Label text="{i18n>Th}"
                                labelFor="Th" />
                            <CheckBox id="Th"
                                selected="{expertCreate>Th}">
                            </CheckBox>
                            <Label text="{i18n>Fr}"
                                labelFor="Fr" />
                            <CheckBox id="Fr"
                                selected="{expertCreate>Fr}">
                            </CheckBox>
                            <Label text="{i18n>ValidFrom}"
                                labelFor="ValidFrom" />
                            <DatePicker id="ValidFrom"
                                value="{expertCreate>ValidFrom}"
                                required="true">
                            </DatePicker>
                            <Label text="{i18n>ValidTo}"
                                labelFor="ValidTo" />
                            <DatePicker id="ValidTo"
                                value="{expertCreate>ValidTo}">
                            </DatePicker>
                        </f:content>
                    </f:SimpleForm>
                </Panel>
            </items>
        </HBox>
        
        <buttons>
            <Button text="{i18n>createBtn}"
                press="onSaveExpert"
                type="Accept" />

            <Button text="{i18n>cancelBtn}"
                press="onCancelExpert"
                type="Reject" />
        </buttons>
    </Dialog >
</core:FragmentDefinition>
