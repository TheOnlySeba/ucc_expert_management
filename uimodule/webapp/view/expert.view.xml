<mvc:View xmlns:mvc="sap.ui.core.mvc"
	xmlns:m="sap.m"
	controllerName="iService_UI5.controller.expert">

	<m:Page title="{i18n>Overview}"
		class="sapUiContentPadding"
		showHeader="false">
		<m:content>
			<m:OverflowToolbar>
				<m:ToolbarSpacer />
				<m:Button text="{i18n>newExpert}"
					type="Accept"
					press="onCreateExpert"
					icon="sap-icon://add" />
				<m:Button text="{i18n>updateExpert}"
					press="onUpdateSelectedExpert"
					icon="sap-icon://edit" />
				<m:Button text="{i18n>deleteExpert}"
					type="Reject"
					press="onDeleteSelectedExpert"
					icon="sap-icon://delete" />
			</m:OverflowToolbar>
			<m:Table id="expertTable"
				headerText="{i18n>expertOverview}"
				items="{
				path:'/zcrm_expert_availabilitySet'
			}"
				growing="true"
				growingThreshold="15"
				mode="SingleSelect">
				<m:columns>
					<m:Column mergeDuplicates="true">
						<m:header>
							<m:Text text="{i18n>ZuccExpert}" />
						</m:header>
					</m:Column>
					<!-- Add more columns as per your data structure here -->
				</m:columns>
				<m:ColumnListItem>
					<m:Text text="{ZuccExpert}" />
					<m:Text text="{Mo}" />
					<m:Text text="{Tu}" />
					<m:Text text="{We}" />
					<m:Text text="{Th}" />
					<m:Text text="{Fr}" />
					<m:Text text="{ValidFrom}" />
					<m:Text text="{ValidTo}" />
					<!-- Add more fields as per your data structure here -->
				</m:ColumnListItem>
			</m:Table>
		</m:content>
	</m:Page>
</mvc:View>
