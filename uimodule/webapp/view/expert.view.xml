<mvc:View xmlns:mvc="sap.ui.core.mvc"
	xmlns:m="sap.m"
	controllerName="iService_UI5.controller.expert">

	<m:Page title="{i18n>Overview}"
		class="sapUiContentPadding"
		showHeader="false">
		<m:content>
			<m:OverflowToolbar>
				<m:ToolbarSpacer />
				<m:Button text="{i18n>newExpert}"
					type="Accept"
					press="onCreateExpert"
					icon="sap-icon://add" />
				<m:Button text="{i18n>updateExpert}"
					press="onUpdateSelectedExpert"
					icon="sap-icon://edit" />
				<m:Button text="{i18n>deleteExpert}"
					type="Reject"
					press="onDeleteSelectedExpert"
					icon="sap-icon://delete" />
			</m:OverflowToolbar>
			<m:Table id="expertTable"
				headerText="{i18n>expertOverview}"
				items="{
				path:'/zcrm_expert_availabilitySet'
			}"
				growing="true"
				growingThreshold="15"
				mode="SingleSelect">
				<m:columns>
					<m:Column mergeDuplicates="true">
						<m:header>
							<m:Text text="{i18n>ZuccExpert}" />
						</m:header>
					</m:Column>
					<m:Column mergeDuplicates="true">
						<m:header>
							<m:Text text="{i18n>Mo}" />
						</m:header>
					</m:Column>
					<m:Column mergeDuplicates="true">
						<m:header>
							<m:Text text="{i18n>Di}" />
						</m:header>
					</m:Column>
					<m:Column mergeDuplicates="true">
						<m:header>
							<m:Text text="{i18n>Mi}" />
						</m:header>
					</m:Column>
					<m:Column mergeDuplicates="true">
						<m:header>
							<m:Text text="{i18n>Do}" />
						</m:header>
					</m:Column>
					<m:Column mergeDuplicates="true">
						<m:header>
							<m:Text text="{i18n>Fr}" />
						</m:header>
					</m:Column>
					<m:Column mergeDuplicates="true">
						<m:header>
							<m:Text text="{i18n>ValidFrom}" />
						</m:header>
					</m:Column>
					<m:Column mergeDuplicates="true">
						<m:header>
							<m:Text text="{i18n>ValidUntil}" />
						</m:header>
					</m:Column>
					<!-- Add more columns as per your data structure here -->
				</m:columns>
				<m:ColumnListItem>
					<m:Text text="{zucc_expert}" />
					<m:Text text="{mo}" />
					<m:Text text="{tu}" />
					<m:Text text="{we}" />
					<m:Text text="{th}" />
					<m:Text text="{fr}" />
					<m:Text text="{valid_from}" />
					<m:Text text="{valid_to}" />
					<!-- Add more fields as per your data structure here -->
				</m:ColumnListItem>
			</m:Table>
		</m:content>
	</m:Page>
</mvc:View>
