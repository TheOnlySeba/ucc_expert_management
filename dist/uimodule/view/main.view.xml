<mvc:View xmlns:core="sap.ui.core"
	xmlns="sap.ui.table"
	xmlns:m="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="iService_UI5.controller.main">

	<m:Page title="iServices"
		class="sapUiContentPadding"
		enableScrolling="false"
		showFooter="false"
		showHeader="false">

		<m:content>
			<Table id="iServiceTable"
				rows="{/Customer1Set}"
				selectionMode="None"
				visibleRowCountMode="Auto"
				enableColumnReordering="false"
				enableCellFilter="true">
				<toolbar>
					<m:Toolbar>
						<m:HBox>
							<m:CheckBox id="aktiv"
								text="{i18n>active}"
								selected="true"
								select="selectFilter" />
							<m:CheckBox id="anschluss"
								text="{i18n>inConnection}"
								select="selectFilter" />
							<m:CheckBox id="geloescht"
								text="{i18n>deleted}"
								select="selectFilter" />
						</m:HBox>
						<m:ToolbarSpacer />
						<m:ToolbarSeparator />
						<m:Button icon="sap-icon://decline"
							tooltip="{i18n>clearAllFilters}"
							press="clearAllFilters" />
						<m:ToolbarSeparator />
						<m:Button tooltip="{i18n>excel-attachment}" icon="sap-icon://excel-attachment" visible="true" press="exportcsv"/> 
						<m:ToolbarSeparator />
						<m:SearchField id="globalSearch"
							placeholder="{i18n>filter}"
							search="filterGlobally"
							value="{ui>/globalFilter}"
							width="30rem" />
					</m:Toolbar>
				</toolbar>
				<rowSettingsTemplate>
					<RowSettings highlight="{= ${Status} === 'aktiv' ? 'Success' : ( ${Status} === 'gelÃ¶scht' ? 'Error' : 'Warning' ) }" />
				</rowSettingsTemplate>
				<columns>
					<Column width="10%"
						filterProperty="Partner"
						sortProperty="Partner">
						<m:Label text="{i18n>customerId}" />
						<template>
							<m:Text text="{Partner}"
								wrapping="false" />
						</template>
					</Column>
					<Column width="28%"
						filterProperty="NameOrgFull"
						sortProperty="NameOrgFull">
						<m:Label text="{i18n>institution}" />
						<template>
							<m:Link text="{NameOrgFull}"
								wrapping="true"
								press="handleNavigationPress" />
						</template>
					</Column>
					<Column width="18%"
						filterProperty="Adresse"
						sortProperty="Adresse">
						<m:Label text="{i18n>address}" />
						<template>
							<m:Text text="{Adresse}"
								wrapping="true" />
						</template>
					</Column>
					<Column width="6%"
						filterProperty="PostCode1"
						sortProperty="PostCode1">
						<m:Label text="{i18n>postCode}" />
						<template>
							<m:Text text="{PostCode1}"
								wrapping="false" />
						</template>
					</Column>
					<Column width="10%"
						filterProperty="City1"
						sortProperty="City1">
						<m:Label text="{i18n>city}" />
						<template>
							<m:Text text="{City1}"
								wrapping="false" />
						</template>
					</Column>
					<Column width="10%"
						filterProperty="LandX"
						sortProperty="LandX">
						<m:Label text="{i18n>country}" />
						<template>
							<m:Text text="{LandX}"
								wrapping="true" />
						</template>
					</Column>
					<Column width="9%">
						<m:Label text="GoogleMaps" />
						<template>
							<m:Link text="{i18n>display}"
								target="_blank"
								href="{GoogleMaps}" />
						</template>
					</Column>
					<Column width="9%">
						<m:Label text="Status" />
						<template>
							<m:Text text="{Status}"
								wrapping="false" />
						</template>
					</Column>
					<!-- <Column width="4%">
						<m:Label text="" />
						<template>
							<m:Button icon="sap-icon://decline" />
						</template>
					</Column> -->
				</columns>
			</Table>
		</m:content>
	</m:Page>
</mvc:View>